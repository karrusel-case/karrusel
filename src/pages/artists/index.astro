<style>
  h1 {
    text-align: center;
    margin-top: var(--space-xl);
  }
  .program_box {
    display: flex;
    flex-direction: column;
    max-width: 1000px;
    justify-content: center;
    align-items: center;
    margin: var(--space-xl) auto;
    padding: var(--space-xl);
    border: 5px solid var(--tertiary-color);
  }
  ul {
    display: flex;
    max-width: 800px;
    flex-wrap: wrap;
    text-align: center;
    justify-content: center;
    align-items: center;
  }

  h2 {
    text-align: center;
  }

  .date_grid {
    text-align: center;
  }

  @media (max-width: 799px) {
    .program_box {
      margin: var(--space-xl);
    }

    .date_grid {
      display: flex;
      flex-direction: column;
      min-width: 450px;
    }
  }

  @media (min-width: 800px) {
    .date_grid {
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
    img {
      width: 50%;
      margin: auto;
    }
  }
</style>
